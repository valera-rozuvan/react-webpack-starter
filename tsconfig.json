{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "ReduxDevtools": [
        "src/utilities/redux-devtools/extension"
      ]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
